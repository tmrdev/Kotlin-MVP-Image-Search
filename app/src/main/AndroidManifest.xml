<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.timreynolds.imagesearch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:name="org.timreynolds.imagesearch.MyApplication">
        <activity
            android:name="org.timreynolds.imagesearch.search.SearchActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.timreynolds.imagesearch.gallery.GalleryActivity"
            android:label="@string/gallery_fragment"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="org.timreynolds.imagesearch.photodetail.PhotoDetailActivity"
            android:label="@string/title_activity_photo_detail"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>